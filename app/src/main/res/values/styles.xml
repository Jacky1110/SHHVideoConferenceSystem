<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home_bt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/s_bt_gray</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_22dp</item>
    </style>

    <style name="login_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/red_heavy</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="login_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/s_edit_gray</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="create_meeting_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="create_meeting_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/s_edit_gray</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="et_patient_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/const_16dp</item>
        <item name="android:layout_marginStart">@dimen/const_16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/s_edit_gray</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="tvPatientData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/const_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>